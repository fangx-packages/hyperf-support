{
    "name": "fangx/hyperf-support",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "php",
        "hyperf",
        "facade"
    ],
    "description": "",
    "autoload": {
        "psr-4": {
            "Fangx\\Facade\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HyperfTest\\": "tests"
        }
    },
    "require": {
        "php": ">=7.2",
        "ext-swoole": ">=4.5",
        "hyperf/framework": "2.1.*",
        "hyperf/di": "2.1.*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.14",
        "phpstan/phpstan": "*",
        "hyperf/testing": "2.1.*",
        "swoole/ide-helper": "^4.5"
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "co-phpunit -c phpunit.xml --colors=always",
        "analyse": "phpstan analyse --memory-limit 300M -l 0 ./src",
        "cs-fix": "php-cs-fixer fix $1"
    },
    "extra": {
        "hyperf": {
            "config": "Fangx\\Facade\\ConfigProvider"
        }
    }
}
